@using SimpleChat.Client.Services
@using SimpleChat.Client.Models
@inject AuthService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand flex items-center space-x-2" href="">
            <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
            <span class="text-lg font-black tracking-tight">SimpleChat</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (session == null)
        {
            <div class="nav-item px-3 mt-4">
                <NavLink class="nav-link" href="register">
                    <svg class="bi me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" /></svg>
                    Register
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <svg class="bi me-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" /></svg>
                    Login
                </NavLink>
            </div>
        }
        else
        {
            <div class="mt-auto border-t border-white border-opacity-10 p-4">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold border-2 border-white border-opacity-20 shadow-lg">
                        @session.Username.Substring(0, Math.Min(2, session.Username.Length)).ToUpper()
                    </div>
                    <div class="flex flex-col overflow-hidden">
                        <span class="text-sm font-bold text-white truncate">@session.Username</span>
                        <span class="text-[10px] text-gray-400 uppercase tracking-wider">Online</span>
                    </div>
                </div>
                <button class="w-full flex items-center justify-center space-x-2 py-2 px-4 rounded-lg bg-red-500 bg-opacity-10 hover:bg-opacity-20 text-red-400 text-xs font-bold transition-all border border-red-500 border-opacity-20" @onclick="HandleLogout">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" /></svg>
                    <span>Log Out</span>
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private UserSession? session;

    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += HandleAuthStateChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadSession();
            StateHasChanged();
        }
    }

    private async void HandleAuthStateChanged()
    {
        await LoadSession();
        StateHasChanged();
    }

    private async Task LoadSession()
    {
        try
        {
            session = await AuthService.GetSession();
        }
        catch
        {
            // Ignore errors during prerendering when localStorage is unavailable
        }
    }

    private async Task HandleLogout()
    {
        await AuthService.Logout();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= HandleAuthStateChanged;
    }
}
